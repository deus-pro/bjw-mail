<subsystem xmlns="urn:jboss:domain:mail:2.0">
	<mail-session name=${env.MAIL_SESSION_NAME} jndi-name="java:/yandexMail">
        <smtp-server outbound-socket-binding-ref="yandex-mail-smtp" ssl="true" username="${yandex.mail.username}" password="${yandex.mail.password}"/>
        <custom-server name="imap" outbound-socket-binding-ref="yandex-mail-imap" ssl="true" username="${yandex.mail.username}" password="${yandex.mail.password}">
            <property name="connectiontimeout" value="30000"/>
            <property name="timeout" value="30000"/>
        </custom-server>
    </mail-session>
</subsystem>
